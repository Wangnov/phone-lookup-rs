{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "手机号归属地查询工具",
  "version": "1.0.0",
  "identifier": "com.wangnov.phone-lookup",
  "build": {
    "frontendDist": "../frontend/dist",
    "beforeDevCommand": "cd ../frontend && npm run dev",
    "beforeBuildCommand": "cd ../frontend && npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "手机号归属地查询工具",
        "width": 800,
        "height": 1200,
        "minWidth": 400,
        "minHeight": 300,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "../phone.dat"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}